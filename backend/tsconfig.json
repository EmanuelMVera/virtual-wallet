{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "noEmit": false,
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": ["src", "tests", "custom.d.ts"],
  "exclude": ["node_modules", "dist"]
}
